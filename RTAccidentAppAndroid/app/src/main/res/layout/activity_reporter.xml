<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="Vehicle No."
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edittextvehicleno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="eg:,TS 09 MD 7987"
            android:maxLength="11"
            android:inputType="text"
            android:background="#f7f5f5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="Cause"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/spinnerCause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="Report"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittextreport"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:hint="Type report"
            android:maxLength="200"
            android:lines="5"
            android:gravity="left"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:background="#f7f5f5"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="Location"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edittextlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="#f7f5f5"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="Date"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edittextdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Touch to select a date"
            android:background="#f7f5f5"
            android:inputType="none"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="Time"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edittexttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Touch here to set time"
            android:background="#f7f5f5"
            android:inputType="none"
            android:textSize="16sp"
            android:editable="false"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="News"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edittextnews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="#f7f5f5"/>


    </LinearLayout>

















</LinearLayout>




